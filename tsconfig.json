{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strict": true,
    "allowJs": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "outDir": "dist",
    "declaration": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/tests/*.test.ts",
    "node_modules",
    "dist"
  ],
}