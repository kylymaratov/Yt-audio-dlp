{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "outDir": "dist",
    "declaration": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": [
        "*"
      ]
    },
  },
  "include": [
    "src",
  ],
  "exclude": [
    "src/tests/*.test.ts",
    "node_modules",
    "dist"
  ]
}